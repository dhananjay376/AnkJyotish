        }
        
        .admin-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }
        
        .admin-card h3 {
            font-size: 1.5rem;
            color: var(--mint-green);
            margin-bottom: 1rem;
        }
        
        .admin-card p {
            margin-bottom: 1.5rem;
        }
        
        .admin-btn {
            display: inline-block;
            background-color: var(--mint-green);
            color: var(--dark-green);
            padding: 0.8rem 2rem;
            border-radius: 30px;
            text-decoration: none;
            font-weight: 700;
            transition: var(--transition);
            border: 2px solid transparent;
            cursor: pointer;
        }
        
        .admin-btn:hover {
            background-color: transparent;
            color: var(--mint-green);
            border-color: var(--mint-green);
        }
    </style>
</head>
<body>
    <!-- Password Modal -->
    <div id="passwordModal" class="modal">
        <div class="modal-content">
            <h2>Admin Access</h2>
            <p style="text-align: center; margin-bottom: 1rem;">Please enter the admin password to continue.</p>
            <input type="password" id="passwordInput" placeholder="Enter password">
            <p id="passwordError" class="password-error">Incorrect password. Please try again.</p>
            <button onclick="checkPassword()">Submit</button>
        </div>
    </div>

    <!-- Main Content (Hidden by Default) -->
    <div id="hiddenContent" style="display: none;">
        <header>
            <div class="logo-container">
                <img src="Ankjyotish logo.jpg" alt="AnkJyōtish Logo" />
                <div class="logo-text">AnkJyōtish Admin Portal</div>
            </div>
        </header>

        <div class="admin-container">
            <div class="admin-header">
                <h1>Admin Dashboard</h1>
                <p>Manage your courses, students, and content</p>
            </div>

            <div class="admin-panel">
                <div class="admin-card">
                    <h3>Analytics</h3>
                    <p>View course performance and student engagement metrics</p>
                    <button class="admin-btn" onclick="showAnalytics()">View Analytics</button>
                </div>

                <div class="admin-card">
                    <h3>Students</h3>
                    <p>Manage student enrollments and progress</p>
                    <button class="admin-btn" onclick="showStudents()">Manage Students</button>
                </div>

                <div class="admin-card">
                    <h3>Payments</h3>
                    <p>Track and manage course payments</p>
                    <button class="admin-btn" onclick="showPayments()">View Payments</button>
                </div>

                <div class="admin-card">
                    <h3>Email Campaigns</h3>
                    <p>Create and manage email campaigns</p>
                    <button class="admin-btn" onclick="showEmails()">Manage Emails</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Password functionality
        const CORRECT_PASSWORD = "dhanu123";

        function openPasswordModal() {
            document.getElementById('passwordModal').style.display = 'block';
            document.getElementById('passwordInput').focus();
            document.getElementById('passwordError').style.display = 'none';
        }

        function closePasswordModal() {
            document.getElementById('passwordModal').style.display = 'none';
            document.getElementById('passwordInput').value = '';
            document.getElementById('passwordError').style.display = 'none';
        }

        function checkPassword() {
            const input = document.getElementById('passwordInput').value;
            if (input === CORRECT_PASSWORD) {
                closePasswordModal();
                showContent();
            } else {
                document.getElementById('passwordError').style.display = 'block';
                document.getElementById('passwordInput').value = '';
                document.getElementById('passwordInput').focus();
            }
        }

        function showContent() {
            document.getElementById('hiddenContent').style.display = 'block';
            document.getElementById('passwordModal').style.display = 'none';
        }

        // Admin functions
        function showAnalytics() {
            alert('Analytics feature coming soon!');
        }

        function showStudents() {
            alert('Student management feature coming soon!');
        }

        function showPayments() {
            alert('Payment management feature coming soon!');
        }

        function showEmails() {
            alert('Email campaigns feature coming soon!');
        }

        // Allow Enter key to submit password
        document.getElementById('passwordInput').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                checkPassword();
            }
        });

        // Close modal when clicking outside
        window.onclick = function(event) {
            const modal = document.getElementById('passwordModal');
            if (event.target === modal) {
                closePasswordModal();
            }
        }

        // Show password modal when the page loads
        openPasswordModal();
    </script>
</body>
</html>
